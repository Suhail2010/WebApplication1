
@{
    ViewData["Title"] = "Check Temperature";
}

<h1>Check Temp</h1>

@if (ViewBag.Message != null)
{
    <p>@ViewBag.Message</p>
}

<form asp-controller="Doctor" asp-action="CheckTemp" method="post">
<label>Name: </label>
<input type="text" name="name">
<label>Temperature: </label>
<input type="number" name="temp" min="36.0" max="42.0" step="0.1">
<input type="submit" value="Check">
</form>